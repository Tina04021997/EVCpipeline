process {
    process.executor = 'slurm'
    clusterOptions = '-p platinum -q hcp-ddp302 -A ddp302' 

    cpus   = { check_max( 2    * task.attempt, 'cpus'   ) }
    memory = { check_max( 30.GB * task.attempt, 'memory' ) }
    time   = { check_max( 4.h  * task.attempt, 'time'   ) }

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries    = 5
    maxErrors     = '-1'

    withLabel:process_low {
        cpus   = { check_max( 2     * task.attempt, 'cpus'    ) }
        memory = { check_max( 30.GB * task.attempt, 'memory'  ) }
        time   = { check_max( 4.h   * task.attempt, 'time'    ) }
    }
    withLabel:process_medium {
        cpus   = { check_max( 8     * task.attempt, 'cpus'    ) }
        memory = { check_max( 125.GB * task.attempt, 'memory'  ) }
        time   = { check_max( 8.h   * task.attempt, 'time'    ) }
    }
    withLabel:process_high {
        cpus   = { check_max( 16    * task.attempt, 'cpus'    ) }
        memory = { check_max( 250.GB * task.attempt, 'memory'  ) }
        time   = { check_max( 16.h  * task.attempt, 'time'    ) }
    }
    withLabel:process_long {
        time   = { check_max( 20.h  * task.attempt, 'time'    ) }
    }
    withLabel:process_high_memory {
        memory = { check_max( 200.GB * task.attempt, 'memory' ) }
    }
    withLabel: FASTQC {
        cpus = 4
        memory = 60.GB
        time = 30.h
    }
    withLabel: BWA_MEM {
        cpus = 16
        memory = 250.GB
        time = 25.h
    }
    withLabel:MKDUP {
        cpus = 8
        memory = 125.GB
        time = 20.h
    }
    withLabel:RECALIBRATE {
        cpus = 8
        memory = 125.GB
        time = 20.h
    }
    withLabel:RECALIBRATE_SortBam {
        cpus = 4
        memory = 60.GB
        time = 10.h
    }
    withLabel:MUTECT2_CALLING {
        cpus = 2
        memory = 30.GB
    }
    withLabel:MuSE2 {
        cpus = 8
        memory = 125.GB
    }
    withLabel:STRELKA {
        cpus = 8
        memory = 125.GB
    }
    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 2
    }
}
